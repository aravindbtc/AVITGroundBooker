rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's document in Firestore has the 'admin' role.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS: Users can read/write their own profile. Admins can list all users.
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }
    
    // SLOTS: Slots are read-only for clients. All writes are handled by secure Cloud Functions.
    match /slots/{slotId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
    
    // BOOKINGS: This is the critical fix.
    match /bookings/{bookingId} {
      // READ (single doc): An admin can read any booking. A user can read their own.
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      
      // LIST (queries): 
      // An admin can list all bookings without restriction.
      // A regular user can ONLY list bookings if the query filters by their own UID.
      allow list: if isAdmin() || (isSignedIn() && request.query.where.get("uid")[2] == request.auth.uid);
      
      // WRITE: All writes are handled by trusted Cloud Functions to ensure data integrity.
      allow create, update, delete: if false; 
    }
    
    // ACCESSORIES: Read for all signed-in users, write for admins.
    match /accessories/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // VENUE: Publicly readable for the landing page, but only writable by admins.
    match /venue/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
