
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS collection
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }
    
    // SLOTS: Only trusted server code (Cloud Functions) can create/modify slots
    match /slots/{slotId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }
    
    // BOOKINGS collection
    match /bookings/{bookingId} {
      // Read access: Admin can read any, user can read their own.
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      
      // List access: Admin can list all bookings. A user can only list their own bookings.
      allow list: if isAdmin() || (isSignedIn() && request.query.get("uid") == request.auth.uid);
      
      // Write access: All writes are handled by trusted Cloud Functions.
      // Client-side creation/updates are disallowed.
      allow write: if false; 
    }
    
    // ACCESSORIES & VENUE: Read for all, write for admin
    match /accessories/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /venue/{id} {
      // Allow ANYONE to read venue details (for landing page)
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
    