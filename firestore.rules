rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      // Grant admin privileges if the user's email is admin@avit.ac.in
      return request.auth != null && request.auth.token.email == "admin@avit.ac.in";
    }

    match /venue/{venueId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow get, update, delete: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
    }
    
    // This rule fixes the core issue.
    // It grants full read/write access on the entire bookings collection to the admin.
    // Regular users are still governed by their specific query rules on the client.
    match /bookings/{bookingId} {
      allow read, write: if isAdmin();
      allow get, list, create, update, delete: if request.auth.uid == resource.data.userId;
    }
    
    match /slots/{slotId} {
      allow get: if true;
      allow list: if true;
      allow create, delete: if isAdmin();
      // Allow updates from backend webhooks (no auth) or admin.
      // Allow users to book 'available' slots.
      allow update: if request.auth == null || isAdmin() || (request.auth.uid != null && resource.data.status == 'available');
    }

    match /accessories/{accessoryId} {
      allow get: if true;
      allow list: if true;
      allow create, delete: if isAdmin();
      // Allow stock updates from backend webhooks or admin
      allow update: if request.auth == null || isAdmin();
    }

    match /manpower/{manpowerId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if request.auth.uid == resource.data.userId;
    }

    match /roles_admin/{userId} {
      allow read, create, delete: if isAdmin();
      allow list: if isAdmin();
    }
  }
}
