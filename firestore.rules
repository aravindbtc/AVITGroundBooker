rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // USERS
    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid) || isAdmin();
      allow delete: if false; // avoid accidental deletes
    }

    // SLOTS
    match /slots/{slotId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ACCESSORIES
    match /accessories/{accId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // MANPOWER
    match /manpower/{manpowerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // VENUE
    match /venue/{vId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // BOOKINGS
    match /bookings/{bookingId} {
      // read: admin can read all, user can read own bookings
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);

      // create: only signed in users can create booking where uid matches and status starts as "pending"
      allow create: if isSignedIn()
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.status == "pending"
                    && request.resource.data.payment.orderId is string;

      // update: only admin or owner can update but restrict status changes: only server functions should set paid
      allow update: if isAdmin() ||
                    (isSignedIn() && resource.data.uid == request.auth.uid &&
                      // allow user to cancel before paid
                      (resource.data.status == "pending" && request.resource.data.status == "cancelled"));

      allow delete: if isAdmin();
    }
  }
}
