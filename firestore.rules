
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Grant admin privileges if the user's email is admin@avit.ac.in
      return request.auth != null && request.auth.token.email == "admin@avit.ac.in";
    }
    
    function isQueryingOwnData() {
        // Enforce that a non-admin user MUST filter by their own userId.
        return request.query.where.size() > 0 && request.query.where[0][0] == 'userId' && request.query.where[0][2] == request.auth.uid;
    }

    match /venue/{venueId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
    }
    
    match /bookings/{bookingId} {
      // Admins can read and write any booking.
      allow read, write: if isAdmin();
      
      // Users can get their OWN booking.
      allow get: if request.auth.uid == resource.data.userId;
      
      // Users can list their OWN bookings, but the query must be constrained.
      allow list: if isQueryingOwnData();
      
      // Users can create their own bookings.
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Users can update their own bookings. Backend can also update.
      allow update: if (request.auth.uid == resource.data.userId) || request.auth == null;
      
      // Users can delete their own bookings.
      allow delete: if request.auth.uid == resource.data.userId;
    }
    
    match /slots/{slotId} {
      allow get, list: if true;
      allow create, delete: if isAdmin();
      // Allow updates from backend webhooks (no auth), admin, or users booking an available slot.
      allow update: if request.auth == null || isAdmin() || (request.auth.uid != null && resource.data.status == 'available');
    }

    match /accessories/{accessoryId} {
      allow get, list: if true;
      allow create, delete: if isAdmin();
      // Allow stock updates from backend webhooks or admin
      allow update: if request.auth == null || isAdmin();
    }

    match /manpower/{manpowerId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      // Users can only create, update, or delete their own reviews.
      allow create, update, delete: if request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId;
    }

    match /roles_admin/{userId} {
      allow read, list, create, delete: if isAdmin();
    }
  }
}

    